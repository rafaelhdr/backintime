DIR="user-callback.d"
typeset -i returncode=0

for callback in $(ls -1 $DIR)
do
    if [[ -x ${DIR}/${callback} ]]; then
        ${DIR}/${callback} "$@"
        returncode+=$?
    fi
done
exit $returncode
